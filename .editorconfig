root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.java]
indent_size = 4
continuation_indent_size = 8
max_line_length = 160
indent_brace_style = K&R
spaces_around_operators = true

[*.xml]
indent_size = 4
continuation_indent_size = 8
insert_final_newline = false

[*.yml]
indent_size = 2

[*.json]
indent_size = 2
insert_final_newline = false
